{
  "name": "ripple-app",
  "version": "1.0.0",
  "description": "A Ripple application template with tailwindcss and vitest",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "serve": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "license": "MIT",
  "devDependencies": {
    "@ripple-ts/eslint-plugin": "latest",
    "@ripple-ts/prettier-plugin": "latest",
    "@ripple-ts/typescript-plugin": "latest",
    "@ripple-ts/vite-plugin": "latest",
    "@tailwindcss/vite": "^4.1.17",
    "eslint": "^9.39.1",
    "jsdom": "^27.2.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "ripple": "latest"
  }
}
